#FROM oraclelinux:7-slim
FROM centos:7

ARG MYSQL_SERVER_PACKAGE=mysql-community-server-8.0.15
ARG MYSQL_SHELL_PACKAGE=mysql-shell-8.0.15
ARG MYSQL_DEVEL_PACKAGE=mysql-community-devel-8.0.15

# Install server
RUN yum install -y https://repo.mysql.com/mysql-community-release-el7.rpm \
  && yum-config-manager --enable mysql80-server \
  && yum install -y \
      $MYSQL_SERVER_PACKAGE	\
      $MYSQL_SHELL_PACKAGE \
      $MYSQL_DEVEL_PACKAGE \
      libpwquality \
  && yum clean all \
  && mkdir /docker-entrypoint-initdb.d

#      $MYSQL_SERVER_PACKAGE \


VOLUME /var/lib/mysql



