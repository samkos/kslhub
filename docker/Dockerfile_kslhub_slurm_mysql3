COPY configure_mysql.sh /configure_mysql.sh
COPY healthcheck.sh /healthcheck.sh
ENTRYPOINT ["/configure_mysql.sh"]
HEALTHCHECK CMD /healthcheck.sh
EXPOSE 3306 33060







